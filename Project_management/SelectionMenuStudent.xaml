        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_management"
        mc:Ignorable="d"
        Title="SelectionMenuStudent" Height="450" Width="800">
    <Grid Margin="0,0,-48.4,-110">
        <DataGrid HorizontalAlignment="Left" Name="topicGrid" Height="149" Margin="95,58,0,0" VerticalAlignment="Top" Width="347" SelectionChanged="topicGrid_SelectionChanged"/>
        <TextBox HorizontalAlignment="Left" Name="subject_name" Height="23" Margin="589,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="171" RenderTransformOrigin="0.468,-1.426"/>
