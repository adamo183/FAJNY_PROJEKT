        <Button Content="Search" HorizontalAlignment="Left" Margin="589,90,0,0" VerticalAlignment="Top" Width="80" Height="23" Click="Button_Click" RenderTransformOrigin="0.539,-0.878"/>
        <Button Content="Join Section" HorizontalAlignment="Left" Margin="514,294,0,0" VerticalAlignment="Top" Width="155" Click="Button_Click_1" Height="47"/>
        <Label Content="Topic:" HorizontalAlignment="Left" Margin="252,32,0,0" VerticalAlignment="Top"/>
        <Label Content="Members:" HorizontalAlignment="Left" Margin="252,212,0,0" VerticalAlignment="Top"/>
        <DataGrid HorizontalAlignment="Left" Name="membersgrid" Height="160" Margin="95,238,0,0" VerticalAlignment="Top" Width="347" SelectionChanged="membersgrid_SelectionChanged" MouseDoubleClick="membersgrid_DoubleClick"/>
    </Grid>
</Window>
